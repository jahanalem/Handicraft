</style>
<div>
    @{
        if (ViewBag.PhotoList != null)
        {
            List<Jahan.Handicraft.Model.UModel.Photo> photos = ViewBag.PhotoList as List<Jahan.Handicraft.Model.UModel.Photo>;
            @Html.Partial("_ParallaxSlider", photos)
        }

    }
    <div class="motopress-wrapper content-holder clearfix">
        <div class="container">
            <div class="row">
                <div class="span12" data-motopress-wrapper-file="page-home.php" data-motopress-wrapper-type="content">
                    <div class="row">
                        <div class="span12" data-motopress-type="loop" data-motopress-loop-file="loop/loop-page.php">
                            <div id="post-203" class="post-203 page type-page status-publish hentry page">
                                <div class="mp-row-fluid motopress-row">
                                    <div class="mp-span12 motopress-span">
                                        <div>
                                            <div class="lazy-load-box effect-slidefromleft" data-delay="0" data-speed="600"
                                                 style="transition: all 600ms ease 0s; opacity: 1;">
                                                <div class="title-box clearfix effect-slidefromleft">
                                                    <h2 class="title-box_primary">
                                                        Today's
                                                        specials!
                                                    </h2>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mp-row-fluid motopress-row">
                                    <div class="mp-span12 motopress-span">
                                        <div class="mp-row-fluid motopress-row">
                                            <div class="mp-span12 motopress-span">
                                                <div>
                                                    <div class="lazy-load-box effect-slidefromright" data-delay="0" data-speed="600"
                                                         style="transition: all 600ms ease 0s; opacity: 1;">
                                                        <ul id="highlight" class="posts-grid row-fluid unstyled list_1 effect-slidefromright ul-item-0">
                                                            @foreach (var hProd in ((List<HighlightProducts>)ViewBag.HighlightProd))
                                                            {
                                                                <li class="span4 list-item-1">
                                                                    <figure class="featured-thumbnail thumbnail imageBox">
                                                                        <a href="@hProd.LinkUrl" title="@hProd.Caption"
                                                                           rel="prettyPhoto-1815621504">
                                                                            <img src="@hProd.MainPicture" alt="@hProd.Caption">
                                                                            @{
                                                                                if (hProd.Price != null)
                                                                                {
                                                                                    if (hProd.FirstPartOfPrice != string.Empty)
                                                                                    {
                                                                                        <span class="price"><i>€</i>@hProd.FirstPartOfPrice<b>@hProd.SecondPartOfPrice</b></span>
                                                                                    }
                                                                                }
                                                                            }
                                                                            @*<span class="zoom-icon"></span>*@
                                                                        </a>
                                                                    </figure>
                                                                    <div class="clear"></div>
                                                                    <h5 >
                                                                        <a href="@hProd.LinkUrl" title="@hProd.Caption">
                                                                            <div class="captionHighlight">
                                                                                @hProd.Caption
                                                                            </div>
                                                                            
                                                                        </a>
                                                                    </h5>
                                                                </li>
                                                                                }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mp-row-fluid motopress-row">
                                            <div class="mp-span12 motopress-span">
                                                <div>
                                                    <div class="lazy-load-box effect-fade" data-delay="0" data-speed="600"
                                                         style="transition: all 600ms ease 0s; opacity: 1;">
                                                        <div class="title-box clearfix extra effect-fade">
                                                            <h2 class="title-box_primary">
                                                                The most
                                                                tender feelings in perfect shape!
                                                            </h2>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mp-row-fluid motopress-row">
                                    @Html.Partial("_Banner", (List<Jahan.Handicraft.Model.UModel.Banner>)ViewBag.Banners)
                                </div>
                                <div class="clear"></div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>