@using Jahan.Handicraft.Model.UModel.URenderModel;
@using Jahan.Handicraft.Model.UModel
@using Umbraco.Web.UI.Umbraco


@{
    Layout = "_Layout.cshtml";
}
<style type="text/css">
    
    #highlight img {
    }
